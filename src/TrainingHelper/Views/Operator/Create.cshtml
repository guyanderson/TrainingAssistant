@model TrainingHelper.ViewModels.OperatorCreateVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Create a new Operator </h4>
<hr />
<br />

<form method="post" asp-action="Create" asp-controller="Operator">
    <br />
    @Html.HiddenFor(model => model.Operator.OperatorId)

    @Html.LabelFor(model => model.Operator.Name, "Operator Name:")
    @Html.EditorFor(model => model.Operator.Name, "", "Name")
    <br />
    <br />
    <strong>Select a Shift for this operator:</strong>
    <select @Html.EditorFor(model => model.Operator.ShiftId, "", "ShiftId")>
        @foreach (var x in Model.Shift)
        {
            <option value=@x.ShiftId>@x.Name</option>
        }
    </select>
    <br />
    <br />
    <input type="submit" value="Save" />
</form>


