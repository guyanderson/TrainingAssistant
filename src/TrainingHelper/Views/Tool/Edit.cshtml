@model TrainingHelper.Models.Tool

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4><strong>Edit this Tool:</strong> @Html.DisplayFor(model => model.Name)</h4>
<hr />

<br />
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ToolId)

    @Html.LabelFor(model => model.Name, "Tool Name:")
    @Html.EditorFor(model => model.Name)
    <br />
    <br />
    <strong>Select a Shift for this operator:</strong>
    <select @Html.EditorFor(model => model.BayId)>
        <option value="1">Photo Bay 1<option>
        <option value="2">Photo Bay 2</option>
        <option value="3">Photo Bay 3</option>
        <option value="6">Plasma Etch Bay 1</option>
        <option value="7">Plasma Etch Bay 2</option>
        <option value="8">Wet Etch Bay 1</option>
        <option value="9">Wet Etch Bay 2</option>
        <option value="10">Implant Bay 1</option>
        <option value="11">Implant Bay 2</option>
        <option value="12">Metals Bay 1</option>
        <option value="13">Metals Bay 2</option>
        <option value="14">Diffusion Bay 1</option>
        <option value="15">Diffusion Bay 2</option>
    </select>
    <br />
    <br />
    <input type="submit" value="Save" />
}

