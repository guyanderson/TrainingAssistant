@model IEnumerable<TrainingHelper.Models.Tool>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h4>Here's the list of all Tools in the Fab. Choose one to Edit or Delete.</h4>
<hr />

<div class="row">
    <ul>
        @foreach (var x in Model)
        {
            <li>
                @Html.DisplayFor(modelItem => x.Name) |
                @Html.ActionLink("Edit", "Edit", new { id = x.ToolId }) |
                @Html.ActionLink("Delete", "Delete", new { id = x.ToolId })
            </li>
        }
    </ul>
</div>